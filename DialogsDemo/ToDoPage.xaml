<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DialogsDemo.ToDoPage"
             Title="ToDoPage">
    <VerticalStackLayout>
        <Label 
            Text="Enter New ToDo Task"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="TitleEntry" Placeholder="Enter Title" />
        <Entry x:Name="DescriptionEntry" Placeholder="Enter Description" />
        <DatePicker x:Name="DateCreatedPicker"/>
        <DatePicker x:Name="DateCompletedPicker"/>
        <Button x:Name="SubmitToDoButton" Text="Submit" Clicked="SubmitToDoButton_Clicked"/>
    </VerticalStackLayout>
</ContentPage>