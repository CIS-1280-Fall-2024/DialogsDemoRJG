<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DialogsDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DialogsDemo"
    Shell.FlyoutBehavior="Locked"
    Title="DialogsDemo">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Popup Demos"
        ContentTemplate="{DataTemplate local:PopupDemoPage}"
        Route="PopupDemoPage" />
    <ShellContent
        Title="Action Sheet Demos"
        ContentTemplate="{DataTemplate local:ActionSheetDemoPage}"
        Route="ActionSheetDemoPage" />
    <ShellContent
        Title="Display Prompt Demos"
        ContentTemplate="{DataTemplate local:DisplayPromptDemoPage}"
        Route="DisplayPromptDemoPage" />
    <ShellContent
        Title="Display Custom Dialog Demo"
        ContentTemplate="{DataTemplate local:CustomDialogDemoPage}"
        Route="CustomDialogDemoPage" />
</Shell>
