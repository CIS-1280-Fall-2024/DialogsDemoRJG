<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DialogsDemo.PopupDemoPage"
             Title="PopupDemoPage">
    <VerticalStackLayout>
        <Label 
            Text="Popup Demo"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="ShowPopupButton" Text="Show popup" Clicked="ShowPopupButton_ClickedAsync"/>
        <Label 
            Text="Question Demo"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="ShowConfirmDeletePopupButton" Text="Show Confirm Delete Popup" Clicked="ShowConfirmDeletePopupButton_ClickedAsync"/>
    </VerticalStackLayout>
</ContentPage>