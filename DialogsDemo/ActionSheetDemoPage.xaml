<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DialogsDemo.ActionSheetDemoPage"
             Title="ActionSheetDemoPage">
    <VerticalStackLayout>
        <Label 
            Text="Action Sheet Demo"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="ActionSheetDemoButton" Text="Show action sheet" Clicked="ActionSheetDemoButton_ClickedAsync"/>


        <Label 
            Text="Action Sheet Demo with Destroy Button"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="ActionSheetWithDestroyDemoButton" Text="Show action sheet" Clicked="ActionSheetWithDestroyDemoButton_ClickedAsync"/>
    </VerticalStackLayout>
</ContentPage>