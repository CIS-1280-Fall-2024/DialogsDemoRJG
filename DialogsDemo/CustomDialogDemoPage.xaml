<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DialogsDemo.CustomDialogDemoPage"
             Title="CustomDialogDemoPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ListView x:Name="ToDoListView" ItemSelected="ToDoListView_ItemSelectedAsync"/>
        <Button x:Name="ShowCustomDialogButton"  Text="Add To Do Item" Clicked="AddTodoItem_Clicked"/>
    </VerticalStackLayout>
</ContentPage>